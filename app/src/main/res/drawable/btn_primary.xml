<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorGrnDark" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/colorGrnDark" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorGrn" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/colorGrnDark" />
        </shape>
    </item>
</selector>